<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".discover_activity"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="القاهرة"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/Cairo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                app:srcCompat="@drawable/ao1" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="إسكندرية"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/Alexandria"
                android:layout_width="match_parent"
                android:layout_height="199dp"
                android:layout_marginBottom="30dp"
                app:srcCompat="@drawable/ao11" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="الأقصر"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/The_Shortest"
                android:layout_width="match_parent"
                android:layout_height="199dp"
                android:layout_marginBottom="30dp"
                app:srcCompat="@drawable/ao3" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="أسوان"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/Aswan"
                android:layout_width="match_parent"
                android:layout_height="199dp"
                android:layout_marginBottom="30dp"
                app:srcCompat="@drawable/ao4" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>