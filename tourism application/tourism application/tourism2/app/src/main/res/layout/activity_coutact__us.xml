<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Coutact_Us"
    android:padding="9dp"
    android:background="@drawable/contactus">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Coutact Us"
                android:textStyle="bold"
                android:textColor="@color/primarydark"

                android:layout_margin="10dp"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:text="Contact us about anything related to our company or service. We'll do our best to get back to you as soon as possible...."
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    android:text="Your Name:"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/your_name"
                    android:layout_width="190dp"
                    android:layout_height="40sp"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/input_con"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="yourname.."
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    android:text="Phone Number:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="190dp"
                    android:layout_height="40sp"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/input_con"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="phonenumber"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:text="Email:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="190dp"
                    android:layout_height="40sp"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/input_con"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    android:text="Your Question:"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/Your_Question"
                    android:layout_width="190dp"
                    android:layout_height="40sp"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/input_con"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="YourQuestion"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170sp"
                android:gravity="center"
                android:background="@drawable/btn_bg"
                android:text="Send" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:padding="13dp"
                android:text="To communicate contact:"
                android:textColor="@color/primarydark"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/call"
                android:layout_width="115dp"
                android:layout_height="40sp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="@color/primarydark"
                app:srcCompat="@android:drawable/ic_menu_call" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>